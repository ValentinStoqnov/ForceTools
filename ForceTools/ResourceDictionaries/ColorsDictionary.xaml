<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="ButtonBackgroundBlue">#0078D4</Color>
    <SolidColorBrush x:Key="ButtonBackgroundBlueBrush" Color="{StaticResource ButtonBackgroundBlue}"/>

    <Color x:Key="ButtonForegroundLight">#FFFFFF</Color>
    <SolidColorBrush x:Key="ButtonForegroundLightBrush" Color="{StaticResource ButtonForegroundLight}"/>

    <Color x:Key="MainMenuBackgroundDark">#FF444444</Color>
    <SolidColorBrush x:Key="MainMenuBackgroundDarkBrush" Color="{StaticResource MainMenuBackgroundDark}"/>

    <Color x:Key="WindowBackgroundDark">#FFDEDEDE</Color>
    <SolidColorBrush x:Key="WindowBackgroundDarkBrush" Color="{StaticResource WindowBackgroundDark}"/>

    <Color x:Key="WindowBackgroundLight">#FFF0F0F0</Color>
    <SolidColorBrush x:Key="WindowBackgroundLightBrush" Color="{StaticResource WindowBackgroundLight}"/>
</ResourceDictionary>
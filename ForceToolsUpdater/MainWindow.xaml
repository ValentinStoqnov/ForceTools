<Window x:Class="ForceToolsUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForceToolsUpdater"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Обновяване" Height="250" Width="600" 
        ContentRendered="Window_ContentRendered">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="MessageLabel" FontSize="30"/>
            <ProgressBar x:Name="ProgressBar" IsIndeterminate="True" Height="5" Foreground="#0078D4"/>
        </StackPanel>        
    </Grid>
</Window>
